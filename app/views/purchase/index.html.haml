.buy__main
  .buy__main--top
    購入内容の確認
  .buy__main__goods
    = image_tag ("#{@item.item_images[0].image}"), class: "buy__main__goods--image"
    .buy__main__goods__text
      = @item.name
      .small_bold_text
        = "#{@item.price.to_s(:delimited)}（税込）送料込み"
  .buy__main__items
    .buy__main__items__item
      #pay_price
        .large_bold_text 支払い金額
        .large_bold_text 
          = "#{@item.price.to_s(:delimited)}"
    .buy__main__items__item
      %p.small_bold_text 支払い方法
      %p クレジットカード
      = "**** **** **** " + @default_card_information.last4
      %p 有効期限
      - exp_month = @default_card_information.exp_month.to_s
      - exp_year = @default_card_information.exp_year.to_s.slice(2,3)
      = exp_month + " / " + exp_year
    .buy__main__items__item
      %p.small_bold_text 配送先
      = @sending_destination.postalcode
      = @sending_destination.prefecture_id.name
      = @user.nickname
    = link_to "購入する", pay_purchase_path, class: "buy__main__items--button"
.buy__footer